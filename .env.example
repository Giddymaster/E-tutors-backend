# Example environment variables for the server
# Copy to `.env` and fill values for local development

# Prisma database connection
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE

# JWT secret used to sign auth tokens
JWT_SECRET=your_jwt_secret_here

# Google OAuth (create credentials in Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
# This should match the route in your server that handles callbacks
# e.g. http://localhost:4000/api/auth/google/callback
GOOGLE_REDIRECT=http://localhost:4000/api/auth/google/callback

# Where to redirect after successful OAuth (client app)
CLIENT_OAUTH_REDIRECT=http://localhost:5173/oauth/callback

# Server port (optional)
PORT=4000
